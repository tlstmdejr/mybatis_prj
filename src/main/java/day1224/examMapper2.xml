<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="day1224">
<!-- update 외부 값을 사용하지 않고( parameterType속성을 정의하지 않는다.)
int cnt=SqlSession .update("아이디");-->
<update id="updateParameter" parameterType="int">
update board
set title='없음',content='없음',id='testsdfg'
where num=#{num}
</update>
<!-- 복합형 ( DTO )으로 입력 받을 때
int cnt=SqlSession. update("||",DTO|)-->
<update id="updateCpDept" parameterType="day1219.DeptDTO">
update cp_dept
set dname=#{dname},loc=#{loc}
where deptno=#{deptno}
</update>
<!-- 삭제-->
<delete id="deleteCpDept">
	delete from cp_dept where deptno=90
</delete>
<delete id="deleteCpDeptNo" parameterType="Integer">

	delete from cp_dept where deptno=#{deptno}
</delete>

</mapper>